<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="HCIAndroidFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="PrimaryIconButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/material_on_surface_emphasis_high_type</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>
</resources>