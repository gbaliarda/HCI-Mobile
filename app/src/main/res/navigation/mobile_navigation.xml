<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ar.edu.itba.hci.android.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_routine"
        android:name="ar.edu.itba.hci.android.ui.routine.RoutineFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_routine" >
        <action
            android:id="@+id/action_navigation_routine_to_executionFragment"
            app:destination="@id/execution1Fragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="ar.edu.itba.hci.android.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/execution1Fragment"
        android:name="ar.edu.itba.hci.android.ui.execution.Execution1Fragment"
        android:label="fragment_execution"
        tools:layout="@layout/fragment_execution1" >
        <action
            android:id="@+id/action_execution1Fragment_to_execution2Fragment"
            app:destination="@id/execution2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/execution2Fragment"
        android:name="ar.edu.itba.hci.android.ui.execution.Execution2Fragment"
        android:label="Execution2Fragment"
        tools:layout="@layout/fragment_execution2" >
        <action
            android:id="@+id/action_execution2Fragment_to_navigation_routine2"
            app:destination="@id/navigation_routine" />
    </fragment>
</navigation>